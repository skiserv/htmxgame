<div class="ship" id="ship{{ ship.id }}">
    <img src="{{ asset('/pictures/ships/' ~ ship.type ~ '.png') }}" alt="">
    <div>{{ ship.getName() }}</div>

    <div>
        {% if not fleet.destination %}
        <button hx-put="{{ path('fleet_split', {id:fleet.id, ship_id: ship.id}) }}" hx-target="#ship{{ ship.id }}"
            hx-swap="delete">Split</button>
        {% endif %}
    </div>

</div>